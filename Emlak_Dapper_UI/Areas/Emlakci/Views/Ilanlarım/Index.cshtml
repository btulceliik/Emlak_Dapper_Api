@model List<Emlak_Dapper_UI.Dtos.UrunDtos.KategorilerleIlanListPersonelDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Emlakci/Views/EmlakciLayout/Index.cshtml";
    int count = 0;
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Yayınladığınız İlan Başlığı</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.baslik</td>
                                    <td>@item.kategoriIsim</td>
                                    <td>@item.fiyat</td>
                                    <td>@item.tip</td>
                                    <td><a href="/Urun/UrunSil/@item.urunID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Urun/UrunGuncelle/@item.urunID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Urun/UrunDetay/@item.urunID" class="btn btn-outline-primary">Sitede Gör</a></td>   
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Urun/UrunOlustur/" class="btn btn-outline-info">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>


