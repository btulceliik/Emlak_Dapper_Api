@model List<KategoriSonucDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Yonetici/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Kategori Listesi</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Kategori Adı</th>
								<th scope="col">Durum</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>

							</tr>
						</thead>
						<tbody>
							@forech(var item in Model){
							<tr>
								<th scope="row">@item.KategoriID</th>
								<td>@item.KategoriIsim</td>
								<td>@item.KategoriDurum</td>
								<td>jhon@email.com</td>
								<td><a href="#" class="btn btn-outline-danger">Sil</a> </td>
								<td><a href="#" class="btn btn-outline-succeess">Güncelle</a> </td>

							</tr>
							}
						
						</tbody>
					</table>
					<a href="#" class="btn btn-outline-info">Yeni Kategori Girişi</a>
				</div>
			</div>
		</div>

	</div>
</div>
