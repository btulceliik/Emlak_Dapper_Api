@model KategoriGuncelleDto
@{
    ViewData["Title"] = "KategoriGuncelle";
    Layout = "~/Views/Yonetici/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4"> Kategori Güncelleme Sayfası</h6>
				<form method="post">

					<input type="hidden"asp-for="KategoriID"/>
					<!-- Arka planda gizli olacak şekilde Kategori ID için çalışacak -->

					<label>Kategori Adı</label>
					<input type="text" asp-for="KategoriIsim" class="form-control" />
					<br />
					<button class="btn btn-success">Kategoriyi Güncelle</button>
				</form>
			</div>
		</div>

	</div>
</div>

