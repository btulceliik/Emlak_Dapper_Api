@model List<AnaSayfaHizmetSonucDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Yonetici/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Hizmet Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                
                                <th scope="col"> Başlık </th>
                                
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>

                                    <td>@item.Baslik</td>

                                   
                                    <td><a href="/AnaSayfaHizmet/AnaSayfaHizmetSil/@item.HizmetID" class=" btn btn-outline-danger"> Sil </a></td>
                                    <td><a href="/AnaSayfaHizmet/AnaSayfaHizmetGuncelle/@item.HizmetID" class=" btn btn-outline-success"> Güncelle </a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/AnaSayfaHizmet/AnaSayfaHizmetOlustur/" class=" btn btn-outline-info"> Yeni Hizmet Girişi </a>
                </div>
            </div>

        </div>
    </div>
</div>

