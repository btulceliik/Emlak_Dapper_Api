@model BizKimizDetayOlusturDto
@{

    ViewData["Title"] = "BizKimizDetayOlustur";
    Layout = "~/Views/Yonetici/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Yeni Biz Kimiz Alan Ekleme Sayfası</h6>
				<form method="post">

					<label>Başlık</label>
					<input type="text" asp-for="Baslik" class="form-control" />
					<br />

					<label>Alt Başlık</label>
					<input type="text" asp-for="AltBaslik" class="form-control" />
					<br />

					<label>Açıklama 1</label>
					<textarea rows="5" asp-for="Aciklama1" class="form-control"></textarea>
					<br />

					<label>Açıklama 2 </label>
					<textarea rows="5" asp-for="Aciklama2" class="form-control"></textarea>
					<br />

					<button class="btn btn-primary"> Bilgileri Kaydet</button>
				</form>
			</div>
		</div>

	</div>
</div>
