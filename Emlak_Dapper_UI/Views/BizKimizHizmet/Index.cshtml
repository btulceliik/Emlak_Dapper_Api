@model List<BizKimizHizmetSonucDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Yonetici/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Hizmet Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet Başlığı </th>
                                <th scope="col">Durum</th>
								<th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>

                                    <td>@item.HizmetIsim</td>
                                    
                                    <td>
                                        @if (item.HizmetDurum)
                                        {
                                            <span>Aktif</span>
                                        }
                                        else
                                        {
                                            <span>Pasif</span>
                                        }
                                    </td>
                                    <td><a href="/BizKimizHizmet/HizmetSil/@item.HizmetID" class=" btn btn-outline-danger"> Sil </a></td>
                                    <td><a href="/BizKimizHizmet/HizmetGuncelle/@item.HizmetID" class=" btn btn-outline-success"> Güncelle </a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/BizKimizHizmet/HizmetOlustur/" class=" btn btn-outline-info"> Yeni Hizmet Girişi </a>
                </div>
            </div>

        </div>
    </div>
</div>

