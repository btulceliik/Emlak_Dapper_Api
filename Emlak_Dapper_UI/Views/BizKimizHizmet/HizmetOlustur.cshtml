@model BizKimizHizmetOlusturDto
@{
    ViewData["Title"] = "HizmetOlustur";
    Layout = "~/Views/Yonetici/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Yeni Hizmet Ekleme Sayfası</h6>
				<form method="post">

					<label>Hizmet Başlığı</label>
					<input type="text" asp-for="HizmetIsim" class="form-control" />
					<br />

					


					<button class="btn btn-primary"> Hizmeti Kaydet</button>
				</form>
			</div>
		</div>

	</div>
</div>
