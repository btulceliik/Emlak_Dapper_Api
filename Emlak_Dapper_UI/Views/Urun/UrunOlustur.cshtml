 @model UrunOlusturDto
@{
    ViewData["Title"] = "UrunOlustur";
    Layout = "~/Views/Yonetici/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
				<form method="post">

					<label>İlan Başlığı</label>
					<input type="text" asp-for="baslik" class="form-control" />
					<br />

					<label>Şehir</label>
					<input type="text" asp-for="sehir" class="form-control" />
					<br />

					<label>İlçe</label>
					<input type="text" asp-for="ilce" class="form-control" />
					<br />

					<label>Kategori</label>
					@Html.DropDownListFor(x=>x.kategoriID,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
					<!--	<input type="text" asp-for="kategoriIsim" class="form-control" />  -->
					<br />

					<label>Fiyat</label>
					<input type="text" asp-for="fiyat" class="form-control" />
					<br />

					<label>Tip</label>
					<input type="text" asp-for="tip" class="form-control" />
					<br />

					<label>Kapak Fotoğrafı</label>
					<input type="text" asp-for="kapakGorsel" class="form-control" />
					<br />

					<label>Açık Adres</label>
				    <textarea asp-for="adres" class= "form-control" rows= "5"> </textarea>
					<br />

					<button class="btn btn-primary">İlanı Kaydet</button>
				</form>
			</div>
		</div>

	</div>
</div>



