@model List<UrunSonucDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Yonetici/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tip</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.urunID</th>
                                    <td>@item.baslik</td>
                                    <td>@item.sehir</td>
                                    <td>@item.ilce</td>
                                    <td>@item.kategoriIsim</td>
                                    <td>@item.fiyat</td>
                                    <td>@item.tip</td>
                                    <td><a href="/Urun/UrunSil/@item.urunID" class=" btn btn-outline-danger"> Sil </a></td>
                                    <td><a href="/Urun/UrunGuncelle/@item.urunID" class=" btn btn-outline-success"> Güncelle </a></td>
                                    <td><a href="/Urun/UrunDetay/@item.urunID" class=" btn btn-outline-primary"> Sitede Gör </a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Urun/UrunOlustur/" class=" btn btn-outline-info"> Yeni İlan Girişi </a>
                </div>
            </div>

        </div>
    </div>
</div>
