@model PopülerLokasyonOlusturDto
@{
    ViewData["Title"] = "PopülerLokasyonOlustur";
    Layout = "~/Views/Yonetici/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Yeni Popüler Lokasyon Ekleme Sayfası</h6>
				<form method="post">

					<label>Şehir Adı</label>
					<input type="text" asp-for="SehirIsim" class="form-control" />
					<br />

					<label>Şehir Görseli</label>
					<input type="text" asp-for="GorselUrl" class="form-control" />
					<br />

					<button class="btn btn-primary"> Lokasyon Kaydet</button>
				</form>
			</div>
		</div>

	</div>
</div>

